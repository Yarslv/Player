<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33091227"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_melody_notification"
        tools:src="@drawable/ic_melody_notification" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/compositionNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"

            android:lines="1"
            android:text="text1"
            android:textColor="@color/youtube_fragment_title"
            android:textSize="22sp"
            tools:text="@tools:sample/lorem/random" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/nptifButtonPrev"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_back" />

            <ImageView
                android:id="@+id/notifButtonPausePlay"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/notifButtonNext"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_next" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>